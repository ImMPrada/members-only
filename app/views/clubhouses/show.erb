<div class = 'flex flex-col'>
  <% posts = @clubhouse.posts %>

  <div class = 'content-header'>
    <h2 class = 'block text-6xl mb-6 border-b-2'>
      <%= @clubhouse.title %>
    </h2>
    <p class = 'block text-2xl mb-6'>
      <%= @clubhouse.description%>
    </p>
    <div class = 'text-xl mb-4'>
      Admins:
      <% [*@clubhouse.owners, *@clubhouse.admins].each do |user| %>
        <%= render partial: 'partials/user_card', locals: { user:, basic_info: true } %>
      <% end %>
    </div>
    <span class = 'block text-base mb-1'>
      Posts: <%= posts.size %>
    </span>
  </div>

  <div class = 'flex list-of-cards'>
    <% posts.each do |post| %>
      <%= render partial: 'partials/post_card', locals: { post: } %>
    <% end %>
  </div>
</div>
