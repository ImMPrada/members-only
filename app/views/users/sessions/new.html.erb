<div class="w-3/5 flex flex-col mx-auto">
  <h1 class="min-w-full font-bold text-2xl block">Log in</h1>
  <% unless @user.errors.empty? %>
    <div class="border border-red-400 p-2 rounded round-4 bg-red-100 text-red-400">
      There are some errors:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="block pl-2">* <%= msg %></li>
        <% end %>
    </div>
  <% end %>

  <%= form_with(model: @user,
                 data: {
                  url: registration_path(@user),
                  turbo: false
                 },
                 class: "min-w-full mt-2") do |f| %>


  <div class="field">
    <%= f.label :email, 'e-mail:' %>
    <%= f.email_field :email, { placeholder: UsersController::EMAIL_PLACEHOLDER, class: 'min-w-full' } %>
  </div>

  <div class="field">
    <%= f.label :password, 'password:' %>
    <%= f.password_field :password, {  autocomplete: "new-password", placeholder: UsersController::PASSWORD_PLACEHOLDER, class: 'min-w-full' }  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="field">
    <%= f.submit 'Log in', { class: 'border p-4'} %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
