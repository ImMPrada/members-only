<div class="w-3/5 flex flex-col mx-auto">
  <h1 class="min-w-full font-bold text-2xl block">Log in</h1>

  <%= form_with(model: @session,
                 data: {
                  url: user_session_path(@session),
                  turbo: false
                 },
                 class: "min-w-full mt-2") do |f| %>


  <div class="field">
    <%= f.label :identifier, 'who are you:' %>
    <%= f.text_field :identifier, { placeholder: 'username or email', class: 'min-w-full' } %>
  </div>

  <div class="field">
    <%= f.label :password, 'password:' %>
    <%= f.password_field :password, {  autocomplete: "new-password", placeholder: '********', class: 'min-w-full' }  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field inline-block">
      <%= f.check_box :remember_me %>  <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="field">
    <%= f.submit 'Log in', { class: 'border p-4'} %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
