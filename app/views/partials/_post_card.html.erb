<div class = 'flex flex-col w-full gap-5 border-2 rounded-2xl shadow-lg p-5'>
  <div class = 'w-full mb-6'>
    <p class = 'block text-2xl mb-2 border-b'>
      <%= post.content %>
    </p>
  </div>

  <div class = 'w-full'>
    <p class = 'block text-xl mb-2 border-b'>
      <%= post.user.username %>
    </p>
    <%= link_to 'Show post and comments', post_path(post), { class: 'block text-xl' } %>
  </div>
</div>
