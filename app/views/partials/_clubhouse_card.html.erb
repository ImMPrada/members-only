<div class = 'flex w-full gap-5 justify-between border rounded-2xl shadow-lg p-5'>
  <div class = 'flex flex-col w-3/4'>
    <div class = 'w-full mb-6'>
      <h2 class = 'block text-6xl mb-2'>
        <%= clubhouse.title %>
      </h2>
      <h3 class = 'block text-2xl'>
        <%= clubhouse.description || 'Lorem ipsuum'%>
      </h3>
    </div>

    <div class = 'w-full mt-6'>
      <h4 class = 'block text-base mb-1'>Posts: <%= clubhouse.posts.size %></h4>
      <%= link_to 'Enter to the clubhouse', clubhouse_path(clubhouse), { class: 'block text-xl' } %>
    </div>

    <div class = 'w-full mt-6'>
      options, depending on auths
    </div>
  </div>

  <div class = 'flex flex-col w-1/4'>
    <h3 class = 'block text-xl'>Since: Date</h3>
    <div>
      <h3 class = 'block text-xl'>Admins:</h3>
        <% [*clubhouse.owners, *clubhouse.admins].each do |user| %>
          <%= render partial: 'partials/user_card', locals: { user:, basic_info: true } %>
        <% end %>
    </div>
  </div>
</div>